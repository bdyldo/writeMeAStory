{
    "name": "write-me-a-story",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "npm run dev:frontend",
        "dev:frontend": "cd client && npm run dev",
        "dev:backend": "cd server && python main.py",
        "build": "npm run build:frontend",
        "build:frontend": "cd frontend && npm run build",
        "install:all": "npm install --prefix client && pip install -r server/requirements.txt",
        "clean": "rm -rf client/dist server/node_modules"
    },
    "devDependencies": {
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "concurrently": "^8.2.0"
    },
    "dependencies": {
        "dotenv": "^17.2.1",
        "lucide-react": "^0.525.0",
        "socket.io-client": "^4.8.1"
    }
}
