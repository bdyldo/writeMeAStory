{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": [
    "src",
    "../common/Common",
    "../common/socket.interface.ts",
    "../common/frontend-types.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
